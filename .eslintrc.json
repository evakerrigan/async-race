{
  "plugins": [
    "prettier",
    "import",
    "@typescript-eslint"
  ],
  "extends": [
    "prettier",
    "plugin:@typescript-eslint/recommended",
    "eslint:recommended",
    "airbnb-base",
    "airbnb-typescript/base",
    "airbnb-typescript-prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-debugger": "off",
    "no-console": 0,
    "class-methods-use-this": "off",
    "@typescript-eslint/no-explicit-any": "error"
  },
  "ignorePatterns": [
    "**/*.js"
  ]
}